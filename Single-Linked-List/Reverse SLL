public void reverseSLL() {
  Node curr = head;
  Node ahead = head.next;
  Node temp = null;
  
  curr.next = null;   // Since this will be our last element in SLL
  while(ahead != null) {
    temp = ahead.next;
    ahead.next = curr;
    head = curr = ahead;
    ahead = temp;
  }
}  
